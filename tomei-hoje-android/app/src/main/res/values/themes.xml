<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema escuro obrigatório para o aplicativo -->
    <style name="Theme.TomeiHoje" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Cores de fundo -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        
        <!-- Cores de superfície -->
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Texto -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>
</resources>
